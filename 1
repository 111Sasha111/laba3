#include <iostream>
#include <cstdlib>
#include <fstream>
 
using namespace std;
 
int main()
{  
    ifstream in("predel.txt");
    ofstream out("kolmax.txt");
    
    if(in.is_open() && out.is_open())
    {
        int N, num, count=0, sum_even=0, max=0;
        in >> N;
        
        cout << "Enter integer numbers:\n";
        do//Цикл
        {        
            cin >> num;
            if (num%2==0) sum_even+=num;           
            if (count==0 || num>max) max=num;
            count++;
        }
        while (sum_even<=N);
        in.close();
    
        out << count << " " << max << "\n";
        cout << "File recorded";
        out.close();
    }
    else cout << "Unable to open file\n";
    
    system("pause");
    return 0;
}
